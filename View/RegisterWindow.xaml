<Window x:Class="TopikApp.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng ký tài khoản" Height="320" Width="350"
        WindowStartupLocation="CenterScreen">
	<Grid Margin="20">
		<StackPanel VerticalAlignment="Center">
			<TextBlock Text="Tên đăng nhập:" FontWeight="Bold"/>
			<TextBox x:Name="txtUsername" Margin="0,5"/>

			<TextBlock Text="Mật khẩu:" FontWeight="Bold" Margin="0,10,0,0"/>
			<PasswordBox x:Name="txtPassword" Margin="0,5"/>

			<TextBlock Text="Email:" FontWeight="Bold" Margin="0,10,0,0"/>
			<TextBox x:Name="txtEmail" Margin="0,5"/>

			<Button Content="Đăng ký" Margin="0,15,0,0" Background="#27AE60" Foreground="White" Click="BtnRegister_Click"/>
		</StackPanel>
	</Grid>
</Window>
